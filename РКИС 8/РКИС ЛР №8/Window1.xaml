<Window x:Class="РКИС_ЛР__8.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:РКИС_ЛР__8"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <DockPanel LastChildFill="False">

        <ComboBox DockPanel.Dock="Top">
            <ComboBoxItem Name="Login" IsSelected="True">Вход</ComboBoxItem>
            <ComboBoxItem Name="Registration">Регистрация</ComboBoxItem>
        </ComboBox>

        <Rectangle DockPanel.Dock="Top" Height="100" HorizontalAlignment="Stretch" Fill="Wheat"/>
        <TextBox DockPanel.Dock="Left" VerticalAlignment="Top" Height="30" Width="300" Margin="20 20 0 0" />
        <PasswordBox DockPanel.Dock="Top" Width="300" Height="30" Margin="30 20 0 0" HorizontalAlignment="Left"/>
    </DockPanel>
</Window>
